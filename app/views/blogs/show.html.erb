<h1><%= @blog.name %></h1><br />
<h3><%= link_to "Make A New Blog Post", :controller => "posts", :action => "new"%></h3><br>
<% @blog.posts.each do |post| %>
<h3><%= post.title %></h3>
<p><%= truncate post.body, length: 160 %></p>
<%= link_to "Read More", post %>
<% end %>
<h3><%= link_to "Go To Blog Directory", root_url(:subdomain => "false") %></h3><br>
